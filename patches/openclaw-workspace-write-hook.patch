+import { spawn } from "node:child_process";
+import type { OpenClawConfig } from "../config/config.js";
+
+export type PostWriteContext = {
+  filePath: string;
+  operation: "write" | "edit";
+  workspaceRoot: string;
+};
+
+const DEFAULT_TIMEOUT_MS = 30000;
+
+function interpolateArg(arg: string, context: PostWriteContext): string {
+  return arg
+    .replace(/\$\{filePath\}/g, context.filePath)
+    .replace(/\$\{operation\}/g, context.operation)
+    .replace(/\$\{workspaceRoot\}/g, context.workspaceRoot);
+}
+
+async function executeHook(
+  command: string,
+  args: string[],
+  timeout: number,
+  context: PostWriteContext,
+): Promise<void> {
+  const interpolatedArgs = args.map((arg) => interpolateArg(arg, context));
+
+  return new Promise((resolve) => {
+    const child = spawn(command, interpolatedArgs, {
+      cwd: context.workspaceRoot,
+      stdio: "ignore",
+      timeout,
+    });
+
+    child.on("error", (err) => {
+      console.error(`[workspace:postWrite] Hook error: ${err.message}`);
+      resolve();
+    });
+
+    child.on("close", (code) => {
+      if (code !== 0 && code !== null) {
+        console.error(`[workspace:postWrite] Hook exited with code ${code}`);
+      }
+      resolve();
+    });
+  });
+}
+
+export async function executePostWriteHooks(
+  config: OpenClawConfig | undefined,
+  context: PostWriteContext,
+): Promise<void> {
+  const hooks = config?.workspace?.hooks?.postWrite;
+  if (!hooks || hooks.length === 0) {
+    return;
+  }
+
+  for (const hook of hooks) {
+    const timeout = hook.timeout ?? DEFAULT_TIMEOUT_MS;
+    const args = hook.args ?? [];
+
+    try {
+      await executeHook(hook.command, args, timeout, context);
+    } catch (err) {
+      console.error(
+        `[workspace:postWrite] Unexpected error:`,
+        err instanceof Error ? err.message : String(err),
+      );
+    }
+  }
+}
